<div class="user-head">
  <div class="row">
    <!--user-pic-->
    <div class="user-pic small-4 columns">
      <p>text</p>
    </div>

    <div class="name-and-nav small-8 columns">
      <div class="row">
        <!--user-name-->
        <h1><%= @user.first_name + " " + @user.last_name %></h1>
        <!--follow button business-->
        <% if user_signed_in? %>
          <% if @user != current_user && !current_user.follows?(@user) %>
            <div class="text-center"><a href="/users/<%= @user.id %>/follow" class="button">Follow</a></div>
          <% elsif @user != current_user && current_user.follows?(@user) %>
            <div class="text-center"><a href="/users/<%= @user.id %>/unfollow" class="button">Unfollow</a></div>
          <% end %>
        <% end%>
      </div>

      <div class="row">
        <!--sub nav bar-->
        <nav class="sub-nav" data-topbar role="navigation">
          <section class="top-bar-section">
            <!-- Right Nav Section -->
            <!-- <ul class="right">
              <li class="active"><a href="#">Right Button Active</a></li>
              <li class="has-dropdown">
                <a href="#">Right Button Dropdown</a>
                <ul class="dropdown">
                  <li><a href="#">First link in dropdown</a></li>
                  <li class="active"><a href="#">Active link in dropdown</a></li>
                </ul>
              </li>
            </ul> -->

            <!-- Left Nav Section -->
            <ul class="left">
              <li class="no-li-deco"><a href="/users/<%= @user.id %>/view_followers">Followers</a></li>
            </ul>
          </section>
        </nav>
      </div><!--row sub-nav-->

    </div><!--name-nav-->

  </div><!--row-->
</div><!--user-head end-->

<!--start body-->
<div class="user-body">
  <div class="row">
    <div class="small-4 columns">
      <p>placeholder. pictures, followers, possibly other stuff will go here</p>
    </div>

    <!--start posts-->
    <div class="posts small-8 columns">
      <!--start make-posts-->
      <% if current_user == @user %>
      <div class="make-post">
        <div class="make-post-top">
          <p><strong>Make a post</strong></p>
        </div>

        <div class="make-post-body">
          <form role="form" class="form-group new-post" id="new-post" action="/users/<%= @user.id %>/new_post" enctype="multipart/form-data" accept-charset="UTF-8" method="post">
          <textarea class="form-control" rows="2" name="post_content" id="post_content"></textarea>
        </div>

        <div class="make-post-submit">
          <input class="button tiny" type="submit" name="commit" value="Post"/>
        </div>
      </form>

      </div><!--end make-post-->
      <% end %>
      <br>
      <!--start posts-display-->
      <div class="posts-display">
        <% @posts.each do |post| %>
          <div class="single-post">
            <p><%= post.content %></p>
            <hr>
            <p>Posted: <%= time_ago_in_words(post.created_at) %> ago</p>
          </div>
        <% end %>
      </div><!--post-display-->
    </div><!--end posts-->

  </div><!--end row-->
</div><!--end user-body-->
