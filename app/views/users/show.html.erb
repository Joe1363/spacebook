<%= render 'headerlog' %>
  <h1 class="text-center"><%= @user.first_name + " " + @user.last_name %></h1>
  <% if user_signed_in? %>
    <% if @user != current_user && !current_user.follows?(@user) %>
      <div class="text-center"><a href="/users/<%= @user.id %>/follow" class="button">Follow</a></div>
    <% elsif @user != current_user && current_user.follows?(@user) %>
      <div class="text-center"><a href="/users/<%= @user.id %>/unfollow" class="button">Unfollow</a></div>
    <% end %>
  <% end%>
  <br>

  <% if @followers != [] %>
    <h3 class="text-center"><%= @user.first_name %> is following:</h3>
    <% @followers.each do |f| %>
      <p class="text-center"><%= f.first_name %> <%= f.last_name %></p>
    <% end %>
  <% end %>
