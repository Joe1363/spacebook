<br>
<div class="row follow-space">
  <div class="following small-6 columns">
    <% if @following != [] %>
      <h3 class="text-center">Currently Following (<%= @following.length %>):</h3>
      <% @following.each do |f| %>
        <a href="/users/<%= f.id %>"><p class="text-center"><%= f.first_name %> <%= f.last_name %></p></a>
      <% end %>
    <% end %>
  </div>

  <div class="followers small-6 columns">
    <% if @yourFollowers != [] %>
      <h3 class="text-center">Current Followers (<%= @yourFollowers.length %>):</h3>
      <% @yourFollowers.each do |f| %>
        <a href="/users/<%= f.id %>"><p class="text-center"><%= f.first_name %> <%= f.last_name %></p></a>
      <% end %>
    <% end %>
  </div>

</div><!--end follow-space-->
